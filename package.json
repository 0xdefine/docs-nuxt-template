{
  "name": "@matterlabs/zksync-docs-nuxt-template",
  "type": "module",
  "version": "1.0.1",
  "main": "./nuxt.config.ts",
  "files": [
    "cspell-config",
    "assets",
    "components",
    "composables",
    "lib",
    "modules",
    "plugins",
    "public",
    "types",
    "app.config.ts",
    "nuxt.config.ts",
    "tailwind.config.ts"
  ],
  "scripts": {
    "postinstall": "nuxt prepare",
    "dev": "NUXT_SITE_ENV=staging nuxi dev .playground",
    "build": "NUXT_SITE_ENV=staging nuxt generate .playground",
    "lint": "eslint .",
    "prepare": "node .husky/install.mjs",
    "lint:spelling": "cspell **/*.md --config=./cspell.json",
    "lint:markdown": "markdownlint-cli2 \"content/**/*.md\" --config \".markdownlint.json\"",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "fix:prettier": "prettier --write .",
    "ci:check": "bun run lint:eslint && bun run lint:prettier && bun run lint:spelling && bun run lint:markdown",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^12.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.5",
    "@semantic-release/release-notes-generator": "^13.0.0",
    "cspell": "^8.8.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.4",
    "nuxt": "^3.6.2",
    "semantic-release": "^23.1.1"
  },
  "dependencies": {
    "@iconify-json/devicon": "^1.1.41",
    "@iconify-json/heroicons": "^1.1.21",
    "@iconify-json/simple-icons": "^1.1.101",
    "@nuxt/content": "^2.12.1",
    "@nuxt/eslint": "^0.3.12",
    "@nuxt/fonts": "^0.7.0",
    "@nuxt/image": "^1.7.0",
    "@nuxt/ui": "^2.16.0",
    "@nuxt/ui-pro": "^1.2.0",
    "@nuxtjs/seo": "^2.0.0-rc.10",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.2.0",
    "markdownlint": "^0.34.0",
    "markdownlint-cli2": "^0.13.0",
    "nuxt-headlessui": "^1.2.0",
    "nuxt-og-image": "^3.0.0-rc.53",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "rehype-katex": "^7.0.0",
    "remark-math": "^6.0.0",
    "typescript": "^5.4.5",
    "vue-easy-lightbox": "^1.19.0",
    "vue-tsc": "^2.0.16"
  }
}
